# Platform Auswahl: homeassistant oder homey
PLATFORM_TYPE=homeassistant

# Home Assistant (wenn PLATFORM_TYPE=homeassistant)
HA_URL=http://homeassistant.local:8123
HA_TOKEN=your_long_lived_access_token_here

# Homey Pro (wenn PLATFORM_TYPE=homey)
HOMEY_URL=https://api.athom.com
HOMEY_TOKEN=your_homey_bearer_token_here

# Weather API (optional - abhängig vom gewählten Service)
WEATHER_API_KEY=your_weather_api_key

# Energy Price API (Optional - nur wenn du dynamische Strompreise nutzen willst)
# ENERGY_API_KEY=your_energy_price_api_key
# ENERGY_PROVIDER=awattar

# Optional: Notification Services
TELEGRAM_BOT_TOKEN=your_telegram_token
TELEGRAM_CHAT_ID=your_chat_id
